{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@services/*": ["src/services/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@hocs/*": ["src/hocs/*"],
      "@navigation/*": ["src/navigation/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@modules/*": ["src/modules/*"]
    },
    "jsx": "react-jsx"
  },
  "exclude": ["./index.js"]
}
